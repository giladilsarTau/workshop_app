        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageViewCat5"
        android:layout_width="115dp"
        android:layout_height="113dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="64dp"
        android:background="@color/catGray"
        android:contentDescription="cat6"
        android:cropToPadding="false"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/politics"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/imageViewCat2"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="115dp"
        android:layout_height="113dp"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:background="@color/catGray"
        android:contentDescription="cat1"
        android:padding="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/economy"
        app:layout_constraintEnd_toStartOf="@+id/imageViewCat1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>